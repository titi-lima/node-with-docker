// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  games       String[]
  profile_pic String?

  rooms PlayersOnRoom[]

  @@map("users")
}

model Room {
  id          String   @id @default(uuid())
  game_played String
  time        DateTime
  place       String
  description String
  link        String
  max_players Int

  players PlayersOnRoom[]

  @@map("rooms")
}

model PlayersOnRoom {
  player    User   @relation(fields: [player_id], references: [id])
  player_id String
  room      Room   @relation(fields: [room_id], references: [id])
  room_id   String

  @@id([player_id, room_id])
}
